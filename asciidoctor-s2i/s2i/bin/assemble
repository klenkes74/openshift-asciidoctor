#!/bin/bash

cd /tmp/src

if [ !  -f index.adoc ] ; then
	echo "===================================================="
	echo "   No index.adoc!!!!"
	echo "===================================================="
	exit 1
fi

for adoc in `find . -iname "*.adoc"` ; do
	echo "---> Converting: ${adoc} ..."
	scl enable python27 scl enable rh-ruby23 "asciidoctor \"${adoc}\""
	rm "${adoc}"
done

# Chain the original build script
exec /usr/libexec/s2i/assemble-nginx
